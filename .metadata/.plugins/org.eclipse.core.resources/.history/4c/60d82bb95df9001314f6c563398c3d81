package br.com.senac.view;

import javax.swing.JFrame;
import javax.swing.JLabel;
import java.awt.Font;
import javax.swing.JTextField;
import javax.swing.JButton;

@SuppressWarnings("serial")
public class TelaVisualizarSaldo extends JFrame {
	private JTextField textField;

	public TelaVisualizarSaldo() {
		setTitle("Visualizar Saldo");
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setBounds(100, 100, 242, 225);
		getContentPane().setLayout(null);
		
		JLabel lblVisualizarSaldo = new JLabel("Visualizar Saldo");
		lblVisualizarSaldo.setFont(new Font("Tahoma", Font.BOLD, 14));
		lblVisualizarSaldo.setBounds(10, 11, 167, 14);
		getContentPane().add(lblVisualizarSaldo);
		
		JLabel lblMatrcula = new JLabel("Matr\u00EDcula");
		lblMatrcula.setBounds(10, 36, 64, 14);
		getContentPane().add(lblMatrcula);
		
		textField = new JTextField();
		textField.setBounds(88, 33, 111, 20);
		getContentPane().add(textField);
		textField.setColumns(10);
		
		JButton btnVisualizar = new JButton("Visualizar");
		btnVisualizar.setBounds(10, 82, 89, 23);
		getContentPane().add(btnVisualizar);
		
		JButton btnCancelar = new JButton("Cancelar");
		btnCancelar.setBounds(110, 82, 89, 23);
		getContentPane().add(btnCancelar);
		setVisible(true);

	}

	public static void main(String[] args) {
		new TelaVisualizarSaldo();
	}

}
